{
  "name": "spectrallogs",
  "version": "0.1.9",
  "description": "The fastest, most elegant logging library for Node.js and TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./web": {
      "types": "./dist-web/index.d.ts",
      "import": "./dist-web/index.js"
    }
  },
  "bin": {
    "spec": "dist/cli/index.js"
  },
  "files": [
    "dist",
    "dist-web",
    "README.md",
    "LICENSE"
  ],
  "private": false,
  "scripts": {
    "build": "npx tsc",
    "build:web": "npx tsc -p tsconfig.web.json",
    "build:all": "npm run build && npm run build:web && npm run docs:build",
    "dev": "npx tsc --watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepublishOnly": "npm run build:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "bench": "bun benchmarks/benchmarks.ts"
  },
  "keywords": [
    "logger",
    "logging",
    "console",
    "color",
    "performance",
    "typescript",
    "terminal",
    "cli",
    "ansi",
    "colors",
    "fast"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ZtaMDev/SpectralLogs"
  },
  "bugs": {
    "url": "https://github.com/ZtaMDev/SpectralLogs/issues"
  },
  "homepage": "https://github.com/ZtaMDev/SpectralLogs#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "log4js": "^6.9.1",
    "pino": "^9.13.1",
    "spectrallogs": "latest",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "winston": "^3.14.0"
  }
}
